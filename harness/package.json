{
    "name": "harness",
    "version": "1.0.0",
    "main": "index.js",
    "license": "MIT",
    "bin": {
        "harness": "./bin/harness"
    },
    "scripts": {
        "build:phar": "pharao build",
        "watch:phar" : "pharao watch"
    },
    "pharao": {
        "files": [
            "src/",
            "vendor/.*\\.php$ -tests/ -test/ -examples/",
            "package.json"
        ],
        "output": "build/harnass.phar",
        "entrypoint": "src/main.php"
    }
}